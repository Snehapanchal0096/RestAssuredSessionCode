{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Product Schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "data": {
      "type": "object",
      "properties": {
        "year": {
          "type": "integer",
          "minimum": 2010,
          "maximum": 2024
        },
        "price": {
          "type": "number",
          "minimum": 0
        },
        "CPU model": {
          "type": "string"
        },
        "Hard disk size": {
          "type": "string",
          "pattern": "^[0-9]+\\s*(TB|GB|MB|KB)$"
        }
      },
      "required": ["year", "price", "CPU model", "Hard disk size"],
      "additionalProperties": false
    }
  },
  "required": ["id", "name", "data"],
  "additionalProperties": false
}